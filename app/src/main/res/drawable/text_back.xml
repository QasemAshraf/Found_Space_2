<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
               <solid
                   android:color="#A8A7A7"/>
               <corners
                   android:radius="16dp"/>
               <padding
                   android:left="8dp" android:right="8dp"
                   android:bottom="8dp" android:top="8dp"/>
               <gradient
                   android:angle="135"
                   android:type="linear"
                   android:startColor="#ECECEC"
                   android:centerColor="#FFFFFF"
                   android:endColor="#EBEBEB"/>
        </shape>
    </item>
</selector>