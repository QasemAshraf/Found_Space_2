<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="rectangle">
            <solid
                android:color="#A8A7A7"/>
            <corners
                android:radius="16dp"/>
            <padding
                android:right="8dp" android:left="8dp" />
